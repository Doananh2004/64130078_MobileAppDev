<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/quiz_background"
    tools:context=".QuestionActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/quesCardView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="60dp"
        app:cardCornerRadius="14dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="@color/buttonColor"
        app:cardPreventCornerOverlap="false">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:gravity="center">
            <TextView
                android:id="@+id/quesTxt"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Câu hỏi"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@color/black" />
            <ImageView
                android:id="@+id/quesImg"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:visibility="gone"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:id="@+id/answerLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/quesCardView"
        app:layout_constraintBottom_toBottomOf="@id/resultTxt"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="40dp"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:id="@+id/answerALayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            app:cardCornerRadius="14dp"
            app:cardElevation="10dp"
            app:cardBackgroundColor="@color/buttonColor">
            <TextView
                android:id="@+id/answerATxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="20dp"
                android:text="Option 1"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textColor="@color/black"
                />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/answerBLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="14dp"
            app:cardElevation="10dp"
            app:cardBackgroundColor="@color/buttonColor">
            <TextView
                android:id="@+id/answerBTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="20dp"
                android:text="Option 2"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textColor="@color/black"
                />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/answerCLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="14dp"
            app:cardElevation="10dp"
            app:cardBackgroundColor="@color/buttonColor">
            <TextView
                android:id="@+id/answerCTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="20dp"
                android:text="Option 3"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textColor="@color/black"
                />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/answerDLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="14dp"
            app:cardElevation="10dp"
            app:cardBackgroundColor="@color/buttonColor">
            <TextView
                android:id="@+id/answerDTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="20dp"
                android:text="Option 4"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textColor="@color/black"
                />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <TextView
        android:id="@+id/resultTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/nextBtn"
        android:gravity="center"
        android:textSize="20sp"
        />
    <Button
        android:id="@+id/nextBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="40dp"
        app:backgroundTint="@null"
        android:paddingHorizontal="40dp"
        android:paddingVertical="5dp"
        android:background="@drawable/button"
        android:text="Next"
        android:textColor="@color/black"
        />

</androidx.constraintlayout.widget.ConstraintLayout>