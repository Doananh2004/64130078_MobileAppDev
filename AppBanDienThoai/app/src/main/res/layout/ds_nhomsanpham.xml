<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gridview1"
    android:layout_marginBottom="1dp">
    <ImageView
        android:id="@+id/imgnsp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:importantForAccessibility="no"
        android:src="@mipmap/ic_launcher" /> <!-- Thay your_image bằng ảnh của bạn -->

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/imgnsp"> <!-- Đặt TableLayout bên phải ImageView -->

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:text="Mã :"
                android:textColor="#0021F6"
                android:textSize="15sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/idma"
                android:text="mã"
                android:textColor="#0021F6"
                android:textSize="15sp"
                android:textStyle="italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>

        <!-- Các TableRow khác giữ nguyên -->
        <TableRow>
            <TextView
                android:text="Tên nhóm:"
                android:textColor="#0021F6"
                android:textSize="15sp"
                android:textStyle="normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/ten"
                android:text="Tên Nhóm"
                android:textColor="#0021F6"
                android:textSize="15sp"
                android:textStyle="italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>
    </TableLayout>

    <ImageButton
        android:id="@+id/imgsua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="270dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/edit"
        android:importantForAccessibility="no"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <ImageButton
        android:id="@+id/imgxoa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="300dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/xoa1"
        android:importantForAccessibility="no"
        tools:ignore="SpeakableTextPresentCheck, TouchTargetSizeCheck" />
</RelativeLayout>